{
  "family": "data-embed-ingestion-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::061039772651:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::061039772651:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "data-embed-ingestion-service",
      "image": "061039772651.dkr.ecr.ap-south-1.amazonaws.com/nexa/common:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp",
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "production"
        },
        {
          "name": "SERVER_PORT",
          "value": "8080"
        },
        {
          "name": "QDRANT_PORT",
          "value": "6334"
        },
        {
          "name": "QDRANT_USE_TLS",
          "value": "true"
        },
        {
          "name": "QDRANT_COLLECTION",
          "value": "sample-kb"
        },
        {
          "name": "QDRANT_VECTOR_SIZE",
          "value": "1024"
        },
        {
          "name": "QDRANT_RECREATE_COLLECTION",
          "value": "false"
        },
        {
          "name": "HUGGINGFACE_MODEL",
          "value": "BAAI/bge-large-en-v1.5"
        },
        {
          "name": "LLM_MODEL",
          "value": "meta-llama/Llama-3.1-8B-Instruct:novita"
        },
        {
          "name": "LLM_MAX_TOKENS",
          "value": "512"
        },
        {
          "name": "LLM_TEMPERATURE",
          "value": "0.7"
        }
      ],
      "secrets": [
        {
          "name": "QDRANT_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:061039772651:secret:qdrant/api-key"
        },
        {
          "name": "HUGGINGFACE_API_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:061039772651:secret:huggingface/api-token"
        },
        {
          "name": "CONFLUENCE_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:061039772651:secret:confluence/username"
        },
        {
          "name": "CONFLUENCE_API_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:061039772651:secret:confluence/api-token"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/data-embed-ingestion-service",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    }
  ]
}
