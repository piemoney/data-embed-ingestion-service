# Confluence (Atlassian REST API)
CONFLUENCE_BASE_URL=https://your-instance.atlassian.net
CONFLUENCE_USERNAME=your-email@example.com
CONFLUENCE_API_TOKEN=your-api-token
CONFLUENCE_MAX_PAGES=0  # 0 = no limit

# Jira (Atlassian REST API)
JIRA_BASE_URL=https://your-instance.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-api-token
JIRA_MAX_ISSUES=0  # 0 = no limit

# GitHub (REST API)
GITHUB_API_URL=https://api.github.com
GITHUB_API_TOKEN=ghp_your_token
GITHUB_REPOSITORIES=owner/repo1,owner/repo2
GITHUB_FILE_EXTENSIONS=.md,.txt,.rst,.adoc
GITHUB_MAX_FILE_SIZE=500

# FileSystem (local files)
FILESYSTEM_BASE_PATHS=/path/to/docs,/path/to/wiki
FILESYSTEM_FILE_EXTENSIONS=.md,.txt,.pdf,.docx,.html
FILESYSTEM_MAX_FILE_SIZE=1000
FILESYSTEM_RECURSIVE=true

# Hugging Face Inference API (embeddings)
HUGGINGFACE_API_TOKEN=hf_your_token

# Qdrant vector database
QDRANT_HOST=your-cluster.qdrant.io
QDRANT_PORT=6334
QDRANT_USE_TLS=true
QDRANT_API_KEY=your-api-key
QDRANT_COLLECTION=enterprise-knowledge-base
